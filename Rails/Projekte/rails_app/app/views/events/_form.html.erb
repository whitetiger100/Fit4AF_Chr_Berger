<%= form_for(@event) do |f| %>
	<%= render "shared/errors", object: @event %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :description %><br>
		<%= f.text_area :description %>
	</p>
		<p>
		<%= f.label :location %><br>
		<%= f.text_field :location %>
	</p>
		<p>
		<%= f.label :price %><br>
		<%= f.text_field :price %>
	</p>
	<p>
		<%= f.label :start_at %><br>
		<%= f.datetime_select :start_at %>
	</p>
	<p>
		<%= f.label :image_file %><br>
		<%= f.text_field :image_file, size: 30, placeholder: "GIF, JPG, PNG als Dateityp" %>
	</p>
	<p>
		<%= f.label :capacity %><br>
		<%= f.number_field :capacity %>
	</p>
		<p>
		<%= f.submit %>
	</p>
<% end %>
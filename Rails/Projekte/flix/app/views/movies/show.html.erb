<h1><%= @movie.title %></h1>

<p><%= @movie.description %></p>

<%= image_for(@movie) %>
<p>
	<h3>Wann</h3>
	<%= @movie.released_on %>

	<h3>Worum geht's?</h3>
	<%= @movie.description %>

	<h3>Bewertung</h3>
	<%= @movie.rating %>

	<h3>Einspielergebnis</h3>
	<%= @movie.total_gross %>

	<h3>Laufl√§nge</h3>
 <%= pluralize(@movie.duration, 'minute') %>

 <h3>Regisseur</h3>
 <%= @movie.director %>

 <h3>Besetzung</h3>
 <%= @movie.cast %>
</p>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Sterne</th>
			<th>Kommentar</th>
		</tr>
	</thead>
	<tbody>
		<% @reviews.each do |review| %>
			<tr>
				<td><%= review.name %></td>
				<td><%= review.stars %></td>
				<td><%= link_to "<i class='fi-magnifying-glass icon-green'></i>".html_safe, movie_review_path(@movie.id, review.id) %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<p>
	<div class="button-group">
		<%= link_to "Alle Movies anzeigen", movies_path, class: "button" %>
		<%= link_to "Back", request.referer, class: "button" %>
		<%= link_to "Film bewerten!", new_movie_review_path(@movie.id), class: "button" %>
	</div>
</p>

